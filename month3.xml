<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE nta PUBLIC '-//Uppaal Team//DTD Flat System 1.6//EN' 'http://www.it.uu.se/research/group/darts/uppaal/flat-1_6.dtd'>
<nta>
	<declaration>clock t;
int turn = 0; 
int blue_score = 0;
int red_score = 0;
bool game_over = false;

broadcast chan blue_move, blue_attack, red_move, red_attack;
broadcast chan win, lose;

const int MAX_SCORE = 3;


</declaration>
	<template>
		<name x="5" y="5">BluePlayer</name>
		<location id="id0" x="-170" y="-85">
			<name x="-221" y="-119">Thinking</name>
			<label kind="invariant" x="-204" y="-76">t &lt;= 5</label>
		</location>
		<location id="id1" x="8" y="-85">
			<name x="-2" y="-119">ActionDone</name>
		</location>
		<location id="id2" x="-365" y="-85">
			<name x="-399" y="-119">WaitTurn</name>
		</location>
		<init ref="id0"/>
		<transition id="id3">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="-102" y="-238">turn == 0 &amp;&amp; blue_score &lt; 3</label>
			<label kind="synchronisation" x="-110" y="-263">blue_attack!</label>
			<label kind="assignment" x="-93" y="-212">blue_score++, t := 0</label>
			<nail x="-85" y="-119"/>
		</transition>
		<transition id="id4">
			<source ref="id0"/>
			<target ref="id1"/>
			<label kind="guard" x="-136" y="-59">turn == 0 &amp;&amp; !game_over</label>
			<label kind="synchronisation" x="-136" y="-42">blue_move!</label>
			<label kind="assignment" x="-136" y="-25">t := 0</label>
			<nail x="-85" y="-51"/>
		</transition>
		<transition id="id5">
			<source ref="id1"/>
			<target ref="id2"/>
			<label kind="assignment" x="-221" y="-8">turn = 1</label>
			<nail x="-170" y="0"/>
		</transition>
		<transition id="id6">
			<source ref="id2"/>
			<target ref="id0"/>
			<label kind="guard" x="-323" y="-170">turn == 0 &amp;&amp; !game_over</label>
			<label kind="assignment" x="-306" y="-153">t := 0</label>
			<nail x="-272" y="-136"/>
		</transition>
	</template>
	<template>
		<name>RedPlayer</name>
		<location id="id7" x="-348" y="-68">
			<name x="-358" y="-102">WaitTurn</name>
		</location>
		<location id="id8" x="-136" y="-68">
			<name x="-146" y="-102">Thinking</name>
			<label kind="invariant" x="-161" y="-51">t &lt;= 5</label>
		</location>
		<location id="id9" x="34" y="-68">
			<name x="24" y="-102">ActionDone</name>
		</location>
		<init ref="id7"/>
		<transition id="id10">
			<source ref="id7"/>
			<target ref="id8"/>
			<label kind="guard" x="-297" y="-85">turn == 1 &amp;&amp; !game_over</label>
			<label kind="assignment" x="-280" y="-68">t := 0</label>
		</transition>
		<transition id="id11">
			<source ref="id8"/>
			<target ref="id9"/>
			<label kind="guard" x="-102" y="-127">turn == 1 &amp;&amp; red_score &lt; MAX_SCORE</label>
			<label kind="synchronisation" x="-102" y="-110">red_attack!</label>
			<label kind="assignment" x="-102" y="-93">red_score++</label>
			<nail x="-51" y="-93"/>
		</transition>
		<transition id="id12">
			<source ref="id8"/>
			<target ref="id9"/>
			<label kind="guard" x="-102" y="-34">turn == 1</label>
			<label kind="synchronisation" x="-102" y="-17">red_move!</label>
			<nail x="-51" y="-34"/>
		</transition>
		<transition id="id13">
			<source ref="id9"/>
			<target ref="id7"/>
			<label kind="assignment" x="-229" y="17">turn = 0</label>
			<nail x="-136" y="25"/>
		</transition>
	</template>
	<system>// تعریف سیستم نهایی
// این بخش دقیقاً منطبق با هفته سوم و چهارم برنامه است
system BluePlayer, RedPlayer;</system>
	<queries>
		<query>
			<formula>A[] not deadlock || game_over</formula>
			<comment>بررسی اینکه بازی هیچوقت قفل نمی‌شود (Deadlock Freedom)</comment>
			<result outcome="success" type="quality" timestamp="2026-02-05 17:21:17 +0100">
			</result>
		</query>
		<query>
			<formula>E&lt;&gt; BluePlayer.Victory</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2026-02-05 15:46:40 +0100">
			</result>
		</query>
		<query>
			<formula>E&lt;&gt; blue_score &gt;= MAX_SCORE</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2026-02-05 17:28:21 +0100">
			</result>
		</query>
		<query>
			<formula>A[] not deadlock</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2026-02-05 17:28:54 +0100">
			</result>
		</query>
		<query>
			<formula>A[] not (BluePlayer.Thinking &amp;&amp; RedPlayer.Thinking)</formula>
			<comment/>
			<result outcome="success" type="quality" timestamp="2026-02-05 17:29:20 +0100">
			</result>
		</query>
	</queries>
</nta>
